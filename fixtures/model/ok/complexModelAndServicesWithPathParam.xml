<?xml version="1.0" encoding="UTF-8"?>
<root model-name="complex model and services #1">
	<models>
		<model name="location">
			<property type="double" name="latitude"/>
			<property type="double" name="longitude"/>
		</model>
		<model name="person">
			<property type="string" name="id"/>
			<property type="string" name="firstname"/>
			<property type="string" name="lastname"/>
			<property type="date" name="birthdate"/>
			<property type="boolean" name="isAMan"/>
		</model>
		<model name="shop">
			<property type="string" name="id"/>
			<property type="location" name="location"/>
			<property type="person" name="owner"/>
		</model>
	</models>
	<webservices>
		<webservice name="addPerson">
			<method>post</method>
			<path>/person</path>
			<parameters>
				<parameter type="string" name="firstname"/>
				<parameter type="string" name="lastname"/>
				<parameter type="long" name="birthdate"/>
			</parameters>
			<result>string</result>
		</webservice>
		<webservice name="getPerson">
			<method>get</method>
			<path>/person/{{id}}</path>
			<parameters>
				<parameter type="string" name="id"/>
			</parameters>
			<result>person</result>
		</webservice>
		<webservice name="editPerson">
			<method>put</method>
			<path>/person/{{id}}</path>
			<parameters>
				<parameter type="string" name="firstname"/>
				<parameter type="string" name="id"/>
				<parameter type="string" name="lastname"/>
				<parameter type="long" name="birthdate"/>
			</parameters>
			<result>person</result>
		</webservice>
	</webservices>
</root>
