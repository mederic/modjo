<?xml version="1.0" encoding="UTF-8"?>
<root model-name="android-robospice">
    <description>
        Template for android using robospice framework for service return in JSON
    </description>
    <inputs>
        <input name="basepackage" default="com.modjo"/>
    </inputs>
    <equivalences>
        <equivalence name="java">
            <string>String</string>
            <date>Date</date>
            <boolean>boolean</boolean>
            <float>float</float>
            <int>int</int>
            <long>long</long>
            <double>double</double>
            <char>char</char>
            <model>Model</model>
            <list equivalence="java-object"><![CDATA[List<type>]]></list>
            <map equivalence="java-object"><![CDATA[Map<key, value>]]></map>
        </equivalence>
        <equivalence name="java-object">
            <string>String</string>
            <date>Date</date>
            <boolean>Boolean</boolean>
            <float>Float</float>
            <int>Integer</int>
            <long>Long</long>
            <double>Double</double>
            <char>Char</char>
            <model>Model</model>
            <list><![CDATA[List<type>]]></list>
            <map><![CDATA[Map<key, value>]]></map>
        </equivalence>
    </equivalences>
    <templates>
        <template target="model" dir="models">
            <output name="{{Model}}.java" src="model.tmpl.txt"/>
        </template>
        <template target="webservice" dir="webservices">
            <output name="{{Webservice}}Request.java" src="wsrequest.tmpl.txt" dir="request"/>
	    <output name="{{Webservice}}Result.java" src="wsresult.tmpl.txt" dir="result"/>
        </template>
        <template>
            <output name="AbstractRequest.java" src="request.tmpl.txt" dir="webservices"/>
            <output name="SimpleResult.java" src="result.tmpl.txt" dir="webservices"/>
            <output name="readme.txt" src="readme.txt"/>
            <output name="UrlEncodedContentArraySupport.java" src="urlRequest.tmpl.txt" dir="webservices"/>
         	<output name="SpiceService.java" src="spiceService.tmpl.txt" dir="webservices"/>
         	<output name="JsonSpiceService.java" src="jsonSpiceService.tmpl.txt" dir="webservices"/>
        </template>
    </templates>
</root>
