<?xml version="1.0" encoding="UTF-8"?>
<root model-name="android-robospice">
    <description>
        Template for api server using play framework 1.2
    </description>
    <equivalences>
        <equivalence name="java">
            <string>String</string>
            <date>Date</date>
            <boolean>boolean</boolean>
            <float>float</float>
            <int>int</int>
            <long>long</long>
            <double>double</double>
            <char>char</char>
            <model>Model</model>
            <list equivalence="java-object"><![CDATA[ArrayList<type>]]></list>
            <map equivalence="java-object"><![CDATA[Map<key, value>]]></map>
        </equivalence>
        <equivalence name="java-object">
            <string>String</string>
            <date>Date</date>
            <boolean>Boolean</boolean>
            <float>Float</float>
            <int>Integer</int>
            <long>Long</long>
            <double>Double</double>
            <char>Char</char>
            <model>Model</model>
            <list><![CDATA[ArrayList<type>]]></list>
            <map><![CDATA[Map<key, value>]]></map>
        </equivalence>
        <equivalence name="java-creator">
            <string>new String("defaultString");</string>
            <date>new Date();</date>
            <boolean>false;</boolean>
            <float>1.2;</float>
            <int>5;</int>
            <long>456;</long>
            <double>578;</double>
            <char>'a';</char>
            <model>new Model();</model>
            <list equivalence="java-object"><![CDATA[new ArrayList<type>();]]></list>
            <map equivalence="java-object"><![CDATA[new HashMap<key, value>();]]></map>
        </equivalence>
        <equivalence name="str-default">
            <string>default</string>
            <date>2013-10-04</date>
            <boolean>false</boolean>
            <float>1.2</float>
            <int>5</int>
            <long>456</long>
            <double>578</double>
            <char>a</char>
            <model>model</model>
            <list>list</list>
            <map>map</map>
        </equivalence>
    </equivalences>
    <templates>
        <template target="model" dir="api/results/models">
            <output name="WSModel{{Model}}.java" src="model.tmpl.txt" dir="{{group}}" />
        </template>
        <template target="webservice-group">
            <output name="{{Group}}.java" src="webserviceGroup.tmpl.txt" dir="api" />
            <output name="{{Group}}.java" src="webserviceGroupTest.tmpl.txt" dir="test/functionnal/api" />
        </template>   
        <template target="webservices">
            <output name="routes" src="routes.tmpl.txt" dir="conf"/>
        </template>
        <template dir="api">
            <output name="WSResultCode.java" src="wsResultCode.tmpl.txt" dir="results"/>
            <output name="WSResult.java" src="wsResult.tmpl.txt" dir="results"/>
        </template>
    </templates>
</root>
